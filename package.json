{
  "name": "@log4js-node/logstashudp",
  "version": "1.1.0",
  "description": "Logstash UDP Appender for log4js-node",
  "homepage": "https://log4js-node.github.io/log4js-node/",
  "files": [
    "lib",
    "types"
  ],
  "keywords": [
    "logging",
    "log",
    "log4j",
    "node",
    "logstash",
    "udp"
  ],
  "license": "Apache-2.0",
  "main": "./lib/index.js",
  "types": "./types/index.d.ts",
  "author": "Huang Yichao<ihuangyichao@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/log4js-node/logstashUDP.git"
  },
  "bugs": {
    "url": "http://github.com/log4js-node/logstashUDP/issues"
  },
  "engines": {
    "node": ">=6.0"
  },
  "scripts": {
    "codecheck": "eslint 'src/**/*.js' 'test/**/*.js'",
    "compile": "babel src -d lib",
    "prepublishOnly": "npm test",
    "commitmsg": "commitlint -e $GIT_PARAMS",
    "pretest": "npm run codecheck && npm run compile",
    "clean": "rm -rf lib/ node_modules/",
    "test": "tap 'test/tap/**/*.js' --100",
    "codecov": "tap 'test/tap/**/*.js' --cov --coverage-report=lcov && codecov"
  },
  "directories": {
    "test": "test",
    "lib": "lib"
  },
  "dependencies": {
    "debug": "^3.1.0",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^6.1.3",
    "@commitlint/config-conventional": "^6.1.3",
    "@log4js-node/sandboxed-module": "^2.1.1",
    "babel-cli": "^6.26.0",
    "babel-plugin-lodash": "^3.3.2",
    "babel-preset-env": "^1.6.1",
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "husky": "^0.14.3",
    "log4js": "^2.5.3",
    "nyc": "^11.5.0",
    "tap": "^10.7.3"
  },
  "browser": {
    "os": false
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "nyc": {
    "all": true,
    "include": [
      "lib/**/*.js"
    ],
    "require": [
      "./test/sandbox-coverage"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "node": true,
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 8
    },
    "rules": {
      "no-undef": "error",
      "prefer-const": "error",
      "indent": [
        "error",
        2
      ],
      "max-len": [
        "error",
        {
          "code": 120
        }
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always",
        {
          "omitLastInOneLineBlock": true
        }
      ],
      "arrow-parens": [
        "error",
        "as-needed"
      ],
      "object-curly-spacing": [
        "error",
        "never"
      ],
      "space-before-function-paren": [
        "error",
        {
          "anonymous": "always",
          "named": "never"
        }
      ]
    }
  }
}
